<p id="notice"><%= notice %></p>

<h1>Listing Sales</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Destination</th>
      <th>Quantity</th>
      <th>Total</th>
      <th>Sale date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= Customer.find(sale.customer_id).name %></td>
        <td><%= Destination.find(sale.destination_id).city %></td>
        <td><%= sale.quantity %></td>
        <td><%= sale.total %></td>
        <td><%= sale.sale_date %></td>
        <td><%= link_to 'Show', sale %></td>
        <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
        <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

