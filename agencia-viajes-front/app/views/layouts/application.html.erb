<!DOCTYPE html>
<html>
<head>
  <title>Agencia de Viajes</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<% if @current_user %>
			<%= link_to 'Users', users_path, class: 'btn btn-info' %>
			<%= link_to 'Customers', customers_path, class: 'btn btn-info' %>
			<%= link_to 'Destinations', destinations_path, class: 'btn btn-info' %>
			<%= link_to 'Sales', sales_path, class: 'btn btn-info' %>
			<%= link_to 'Tokens', tokens_path, class: 'btn btn-info' %>
			<%= @current_user.name %>
			<%= link_to 'Exit', logout_path, class: 'btn btn-danger' %>
		<% else %>
			<%= link_to 'Ingresar', login_path, class: 'btn btn-primary' %>
		<% end %>
		
		<%= yield %>
	</div>

</body>
</html>
